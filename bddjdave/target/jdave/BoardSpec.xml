<specification name="BoardSpec" fqn="org.dojo.battleship.BoardSpec">
  <contexts>
    <context name="Empty board">
      <behaviors>
        <behavior name="unit area" />
      </behaviors>
    </context>
    <context name="Playable board">
      <behaviors>
        <behavior name="set pieces" />
        <behavior name="set out of bound pieces" />
        <behavior name="set big pieces" />
        <behavior name="set overlaping pieces" />
      </behaviors>
    </context>
  </contexts>
</specification>
